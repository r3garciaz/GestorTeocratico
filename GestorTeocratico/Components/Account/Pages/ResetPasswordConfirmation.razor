@page "/Account/ResetPasswordConfirmation"
<PageTitle>Reset password confirmation</PageTitle>

<div style="max-width: 400px; margin: 40px auto; box-shadow: 0 4px 24px rgba(0,0,0,0.08); border-radius: 16px; background: #fff;">
    <div style="padding: 32px; text-align:center;">
        <h1 style="color:#1976d2; font-weight:700; margin-bottom:16px;">Reset password confirmation</h1>
        <p role="alert" style="color:#388e3c; font-size:1.1rem; font-weight:500;">Your password has been reset. Please <a href="Account/Login" style="color:#1976d2; font-weight:500;">click here to log in</a>.</p>
    </div>
</div>