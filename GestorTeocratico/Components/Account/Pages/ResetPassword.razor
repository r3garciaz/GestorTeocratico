@page "/Account/ResetPassword"

@using System.ComponentModel.DataAnnotations
@using System.Text
@using Microsoft.AspNetCore.WebUtilities
@inject UserManager<ApplicationUser> UserManager
@inject ILogger<ResetPassword> Logger

@inject IdentityRedirectManager RedirectManager

<PageTitle>Reset password</PageTitle>

<div class="account-card">
    <div class="account-card-content">
        <h1 class="account-title">Reset password</h1>
        <StatusMessage Message="@Message"/>
        <EditForm Model="Input" method="post" OnValidSubmit="ResetUserPassword" FormName="reset-password">
            <DataAnnotationsValidator/>
            <ValidationSummary class="text-danger" role="alert"/>
            <div>
                <InputText @bind-Value="Input.Email" id="Input.Email" class="account-input" placeholder="Email" autocomplete="username" required />
                <ValidationMessage For="() => Input.Email" class="text-danger" />
            </div>
            <div>
                <InputText @bind-Value="Input.Password" id="Input.Password" type="password" class="account-input" placeholder="New Password" autocomplete="new-password" required />
                <ValidationMessage For="() => Input.Password" class="text-danger" />
            </div>
            <div>
                <InputText @bind-Value="Input.ConfirmPassword" id="Input.ConfirmPassword" type="password" class="account-input" placeholder="Confirm Password" autocomplete="new-password" required />
                <ValidationMessage For="() => Input.ConfirmPassword" class="text-danger" />
            </div>
            <div>
                <button type="submit" class="account-btn-primary">Reset password</button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    public string? Message { get; set; }

    [SupplyParameterFromForm] public InputModel Input { get; set; } = new();

    [SupplyParameterFromQuery] public string? Code { get; set; }

    protected override void OnInitialized()
    {
        Logger.LogInformation("ResetPassword page loaded with code: {Code}...", Code?[5..]);
        if (Code is null)
        {
            Message = "Invalid password reset request.";
            return;
        }
        Input.Code = Input.Code = Encoding.UTF8.GetString(WebEncoders.Base64UrlDecode(Code));;
    }

    public async Task ResetUserPassword()
    {
        var user = await UserManager.FindByEmailAsync(Input.Email);
        if (user is null)
        {
            Message = "If the email exists, a password reset will be processed.";
            return;
        }
        
        var result = await UserManager.ResetPasswordAsync(user, Input.Code, Input.Password);
        if (result.Succeeded)
        {
            Message = "Your password has been reset successfully.";
        }
        else
        {
            Message = string.Join(", ", result.Errors.Select(e => e.Description));
        }
    }

    public class InputModel
    {
        [Required] [EmailAddress] public string Email { get; set; } = "";

        [Required]
        [StringLength(100, ErrorMessage = "The {0} must be at least {2} and at max {1} characters long.", MinimumLength = 6)]
        [DataType(DataType.Password)]
        public string Password { get; set; } = "";

        [DataType(DataType.Password)]
        [Display(Name = "Confirm password")]
        [Compare("Password", ErrorMessage = "The password and confirmation password do not match.")]
        public string ConfirmPassword { get; set; } = "";

        [Required] public string Code { get; set; } = "";
    }
}