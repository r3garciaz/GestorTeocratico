@page "/Account/Lockout"

<PageTitle>Locked out</PageTitle>

<div style="max-width: 400px; margin: 40px auto; box-shadow: 0 4px 24px rgba(0,0,0,0.08); border-radius: 16px; background: #fff;">
    <div style="padding: 32px; text-align:center;">
        <h1 style="color:#d32f2f; font-weight:700; margin-bottom:16px;">Locked out</h1>
        <p style="color:#d32f2f; font-size:1.1rem; font-weight:500;" role="alert">This account has been locked out, please try again later.</p>
        <p style="margin-top:24px; color:#1976d2; font-size:0.95rem;">If you believe this is an error, please contact your administrator.</p>
    </div>
</div>