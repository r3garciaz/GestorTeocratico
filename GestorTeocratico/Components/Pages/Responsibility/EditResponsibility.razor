@page "/edit-responsibility"

@using GestorTeocratico.Entities
@inject DialogService DialogService
@inject GestorTeocratico.Features.Responsibilities.IResponsibilityService ResponsibilityService

<PageTitle>Edit Responsibility</PageTitle>

<RadzenColumn SizeMD=12>
    <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@_errorVisible">Cannot save Responsibility</RadzenAlert>
    <RadzenTemplateForm TItem="Responsibility" Data="@(_responsibility)" Visible="@(_responsibility != null)" Submit="@HandleValidSubmit">
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Name" Component="Name" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenTextBox style="display: block; width: 100%" @bind-Value="@(_responsibility.Name)" Name="Name" />
                <RadzenRequiredValidator Component="Name" Text="Name is required" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Description" Component="Description" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenTextArea style="display: block; width: 100%" @bind-Value="@(_responsibility.Description)" 
                                Name="Description" Rows="3" MaxLength="500" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Department" Component="DepartmentId" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDropDown @bind-Value="@_responsibility.DepartmentId" 
                                Data="@_availableDepartments" 
                                TextProperty="@nameof(Department.Name)" 
                                ValueProperty="@nameof(Department.DepartmentId)"
                                AllowClear="true"
                                Placeholder="Select department (optional)"
                                Style="width: 100%; max-width: 400px;" 
                                Name="DepartmentId" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Assigned Publishers" Component="PublisherIds" style="width: 100%"/>
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDropDown @bind-Value="@_selectedPublisherIds" 
                                Data="@_availablePublishers" 
                                TextProperty="@nameof(PublisherOption.FullName)" 
                                ValueProperty="@nameof(PublisherOption.PublisherId)"
                                Multiple="true"
                                AllowClear="true"
                                Placeholder="Select publishers (optional)"
                                Style="width: 100%; max-width: 400px;" 
                                Name="PublisherIds" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
            <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
            <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick" />
        </RadzenStack>
    </RadzenTemplateForm>
</RadzenColumn>

@code {
    [Parameter]
    public Guid ResponsibilityId { get; set; }
    
    private Responsibility _responsibility;
    private bool _errorVisible;
    private IEnumerable<Department> _availableDepartments = [];
    private IEnumerable<PublisherOption> _availablePublishers = [];
    private IEnumerable<Guid> _selectedPublisherIds = [];
    
    protected override async Task OnInitializedAsync()
    {
        _responsibility = await ResponsibilityService.GetByIdAsync(ResponsibilityId);
        await LoadAvailableDepartments();
        await LoadAvailablePublishers();
        
        // Cargar los publishers actualmente asignados
        if (_responsibility?.PublisherResponsibilities != null)
        {
            _selectedPublisherIds = _responsibility.PublisherResponsibilities.Select(pr => pr.PublisherId).ToList();
        }
    }

    private async Task LoadAvailableDepartments()
    {
        _availableDepartments = await ResponsibilityService.GetAvailableDepartmentsAsync();
    }

    private async Task LoadAvailablePublishers()
    {
        var publishers = await ResponsibilityService.GetAvailablePublishersAsync();
        _availablePublishers = publishers.Select(p => new PublisherOption
        {
            PublisherId = p.PublisherId,
            FullName = GetPublisherFullName(p)
        }).OrderBy(p => p.FullName);
    }

    private async Task HandleValidSubmit()
    {
        try
        {
            await ResponsibilityService.UpdateAsync(_responsibility);
            
            // Actualizar publishers asignados
            await ResponsibilityService.UpdateResponsibilityPublishersAsync(_responsibility.ResponsibilityId, _selectedPublisherIds);
            
            DialogService.Close(_responsibility);
        }
        catch (Exception ex)
        {
            _errorVisible = true;
        }
    }

    private async Task CancelButtonClick(MouseEventArgs args)
    {
        DialogService.Close(null);
    }

    private string GetPublisherFullName(Publisher publisher)
    {
        var fullName = publisher.FirstName;
        if (!string.IsNullOrEmpty(publisher.LastName))
            fullName += $" {publisher.LastName}";
        if (!string.IsNullOrEmpty(publisher.MotherLastName))
            fullName += $" {publisher.MotherLastName}";
        return fullName;
    }

    public class PublisherOption
    {
        public Guid PublisherId { get; set; }
        public string FullName { get; set; } = string.Empty;
    }
}
