@page "/create-department"
@using GestorTeocratico.Entities
@inject DialogService DialogService
@inject GestorTeocratico.Features.Departments.IDepartmentService DepartmentService

<PageTitle>Agregar Departamento</PageTitle>

<RadzenColumn SizeMD=12>
    <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger"
                 Visible="@_errorVisible">No se puede guardar el departamento
    </RadzenAlert>
    <RadzenTemplateForm TItem="Department" Data="@(_department)" Visible="@(_department != null)"
                        Submit="@HandleValidSubmit">
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Nombre" Component="Name" style="width: 100%"/>
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenTextBox style="display: block; width: 100%" @bind-Value="@(_department.Name)" Name="Name"/>
                <RadzenRequiredValidator Component="Name" Text="El nombre es obligatorio"/>
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Publicador Responsable" Component="ResponsiblePublisherId"
                             style="width: 100%"/>
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDropDown @bind-Value="@_department.ResponsiblePublisherId"
                                Data="@_availablePublishers"
                                TextProperty="@nameof(PublisherOption.FullName)"
                                ValueProperty="@nameof(PublisherOption.PublisherId)"
                                AllowClear="true"
                                Placeholder="Selecciona el publicador responsable (opcional)"
                                Style="width: 100%; max-width: 400px;"
                                Name="ResponsiblePublisherId" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Responsabilidades" Component="ResponsibilityIds" style="width: 100%"/>
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDropDown @bind-Value="@_selectedResponsibilityIds"
                                Data="@_availableResponsibilities"
                                TextProperty="@nameof(Responsibility.Name)"
                                ValueProperty="@nameof(Responsibility.ResponsibilityId)"
                                Multiple="true"
                                AllowClear="true"
                                Placeholder="Selecciona responsabilidades (opcional)"
                                Style="width: 100%; max-width: 400px;"
                                Name="ResponsibilityIds" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center"
                     JustifyContent="JustifyContent.End" Gap="0.5rem">
            <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Guardar"
                          Variant="_variant"/>
            <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancelar" Variant="_variant"
                          Click="@CancelButtonClick"/>
        </RadzenStack>
    </RadzenTemplateForm>
</RadzenColumn>

@code {
    private readonly Department _department = new() { Name = string.Empty };
    private Variant _variant = Variant.Outlined;
    private bool _errorVisible;
    private IEnumerable<PublisherOption> _availablePublishers = [];
    private IEnumerable<Responsibility> _availableResponsibilities = [];
    private IEnumerable<Guid> _selectedResponsibilityIds = [];

    protected override async Task OnInitializedAsync()
    {
        await LoadAvailablePublishers();
        await LoadAvailableResponsibilities();
    }

    private async Task LoadAvailablePublishers()
    {
        var publishers = await DepartmentService.GetAvailablePublishersAsync();
        _availablePublishers = publishers.Select(p => new PublisherOption
        {
            PublisherId = p.PublisherId,
            FullName = GetPublisherFullName(p)
        }).OrderBy(p => p.FullName);
    }

    private async Task LoadAvailableResponsibilities()
    {
        _availableResponsibilities = await DepartmentService.GetAvailableResponsibilitiesAsync();
    }

    private async Task HandleValidSubmit()
    {
        try
        {
            await DepartmentService.AddAsync(_department);
            
            // Actualizar responsabilidades si se seleccionaron algunas
            if (_selectedResponsibilityIds.Any())
            {
                await DepartmentService.UpdateDepartmentResponsibilitiesAsync(_department.DepartmentId, _selectedResponsibilityIds);
            }
            
            DialogService.Close(true);
        }
        catch
        {
            _errorVisible = true;
        }
    }

    private async Task CancelButtonClick(MouseEventArgs args)
    {
        DialogService.Close(null);
    }

    private string GetPublisherFullName(Publisher publisher)
    {
        var fullName = publisher.FirstName;
        if (!string.IsNullOrEmpty(publisher.LastName))
            fullName += $" {publisher.LastName}";
        if (!string.IsNullOrEmpty(publisher.MotherLastName))
            fullName += $" {publisher.MotherLastName}";
        return fullName;
    }

    public class PublisherOption
    {
        public Guid PublisherId { get; set; }
        public string FullName { get; set; } = string.Empty;
    }
}
