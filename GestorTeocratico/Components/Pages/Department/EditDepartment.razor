@page "/edit-department"

@using GestorTeocratico.Entities
@inject DialogService DialogService
@inject GestorTeocratico.Features.Departments.IDepartmentService DepartmentService

<PageTitle>Edit Department</PageTitle>

<RadzenColumn SizeMD=12>
    <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Department</RadzenAlert>
    <RadzenTemplateForm TItem="Department" Data="@(department)" Visible="@(department != null)" Submit="@HandleValidSubmit">
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Name" Component="Name" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenTextBox style="display: block; width: 100%" @bind-Value="@(department.Name)" Name="Name" />
                <RadzenRequiredValidator Component="Name" Text="Name is required" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Responsible Publisher" Component="ResponsiblePublisherId" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDropDown @bind-Value="@department.ResponsiblePublisherId" 
                                Data="@_availablePublishers" 
                                TextProperty="@nameof(PublisherOption.FullName)" 
                                ValueProperty="@nameof(PublisherOption.PublisherId)"
                                AllowClear="true"
                                Placeholder="Select responsible publisher (optional)"
                                Style="width: 100%; max-width: 400px;" 
                                Name="ResponsiblePublisherId" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Responsibilities" Component="ResponsibilityIds" style="width: 100%"/>
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDropDown @bind-Value="@_selectedResponsibilityIds" 
                                Data="@_availableResponsibilities" 
                                TextProperty="@nameof(Responsibility.Name)" 
                                ValueProperty="@nameof(Responsibility.ResponsibilityId)"
                                Multiple="true"
                                AllowClear="true"
                                Placeholder="Select responsibilities (optional)"
                                Style="width: 100%; max-width: 400px;" 
                                Name="ResponsibilityIds" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
            <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
            <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick" />
        </RadzenStack>
    </RadzenTemplateForm>
</RadzenColumn>

@code {
    [Parameter]
    public Guid DepartmentId { get; set; }
    
    private Department department;
    private bool errorVisible;
    private IEnumerable<PublisherOption> _availablePublishers = [];
    private IEnumerable<Responsibility> _availableResponsibilities = [];
    private IEnumerable<Guid> _selectedResponsibilityIds = [];
    
    protected override async Task OnInitializedAsync()
    {
        department = await DepartmentService.GetByIdAsync(DepartmentId);
        await LoadAvailablePublishers();
        await LoadAvailableResponsibilities();
        
        // Cargar las responsabilidades actualmente asignadas
        if (department?.Responsibilities != null)
        {
            _selectedResponsibilityIds = department.Responsibilities.Select(r => r.ResponsibilityId).ToList();
        }
    }

    private async Task LoadAvailablePublishers()
    {
        var publishers = await DepartmentService.GetAvailablePublishersAsync();
        _availablePublishers = publishers.Select(p => new PublisherOption
        {
            PublisherId = p.PublisherId,
            FullName = GetPublisherFullName(p)
        }).OrderBy(p => p.FullName);
    }

    private async Task LoadAvailableResponsibilities()
    {
        _availableResponsibilities = await DepartmentService.GetAvailableResponsibilitiesAsync();
    }

    private async Task HandleValidSubmit()
    {
        try
        {
            await DepartmentService.UpdateAsync(department);
            
            // Actualizar responsabilidades
            await DepartmentService.UpdateDepartmentResponsibilitiesAsync(department.DepartmentId, _selectedResponsibilityIds);
            
            DialogService.Close(department);
        }
        catch (Exception ex)
        {
            errorVisible = true;
        }
    }

    private async Task CancelButtonClick(MouseEventArgs args)
    {
        DialogService.Close(null);
    }

    private string GetPublisherFullName(Publisher publisher)
    {
        var fullName = publisher.FirstName;
        if (!string.IsNullOrEmpty(publisher.LastName))
            fullName += $" {publisher.LastName}";
        if (!string.IsNullOrEmpty(publisher.MotherLastName))
            fullName += $" {publisher.MotherLastName}";
        return fullName;
    }

    public class PublisherOption
    {
        public Guid PublisherId { get; set; }
        public string FullName { get; set; } = string.Empty;
    }
}
