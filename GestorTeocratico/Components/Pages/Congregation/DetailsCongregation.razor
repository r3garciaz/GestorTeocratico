@using GestorTeocratico.Entities
@using Radzen;
@using Radzen.Blazor;
@inject Radzen.DialogService DialogService

<RadzenCard Style="min-width:400px; max-width:600px; box-shadow: 0 4px 24px rgba(0,0,0,0.12); border-radius: 16px;">
    <div class="mb-4">
        <h3 class="fw-bold text-primary" style="margin-bottom: 0.5rem;">Congregation Details</h3>
        <hr />
    </div>
    <RadzenFieldset Style="border:none; padding:0;">
        <div class="row gy-3">
            <div class="col-5 text-secondary">Name:</div>
            <div class="col-7 fw-semibold">@congregation.Name</div>
            <div class="col-5 text-secondary">Midweek Meeting Day Even Year:</div>
            <div class="col-7">@congregation.MidweekMeetingDayEvenYear</div>
            <div class="col-5 text-secondary">Midweek Meeting Day Odd Year:</div>
            <div class="col-7">@congregation.MidweekMeetingDayOddYear</div>
            <div class="col-5 text-secondary">Weekend Meeting Day Even Year:</div>
            <div class="col-7">@congregation.WeekendMeetingDayEvenYear</div>
            <div class="col-5 text-secondary">Weekend Meeting Day Odd Year:</div>
            <div class="col-7">@congregation.WeekendMeetingDayOddYear</div>
            <div class="col-5 text-secondary">Address:</div>
            <div class="col-7">@congregation.Address</div>
            <div class="col-5 text-secondary">City:</div>
            <div class="col-7">@congregation.City</div>
        </div>
    </RadzenFieldset>
    <div class="d-flex justify-content-end mt-4">
        <RadzenButton Text="Close" Icon="close" ButtonStyle="ButtonStyle.Secondary" Style="min-width: 120px;" Click="@Close" />
    </div>
</RadzenCard>

@code {
    [Parameter] public Congregation congregation { get; set; } = new() { Name = string.Empty, IsDeleted = false };

    private void Close()
    {
        DialogService.Close();
    }
}
