@page "/congregations"
@using GestorTeocratico.Entities
@using GestorTeocratico.Features.Congregations
@inject ICongregationService CongregationService
@inject DialogService DialogService
@inject NotificationService NotificationService

<PageTitle>Congregaciones</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Congregaciones" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0"/>
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center"
                         JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Agregar Congregación" Click="@AddButtonClick" Variant="Variant.Flat"/>
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
        <RadzenColumn SizeMD="12">
            <RadzenDataGrid @ref="grid0" ColumnWidth="200px" AllowFiltering="true" FilterMode="FilterMode.Advanced"
                            AllowPaging="true" AllowSorting="true" ShowPagingSummary="true"
                            PageSizeOptions=@(new int[] { 5, 10, 20, 30 })
                            Data="@(_congregations)" >
                <Columns>
                    <RadzenDataGridColumn Property="@nameof(Congregation.Name)" Title="Nombre"/>
                    <RadzenDataGridColumn Property="@nameof(Congregation.MidweekMeetingDayEvenYear)" Title="Día Semana Año Par"/>
                    <RadzenDataGridColumn Property="@nameof(Congregation.MidweekMeetingDayOddYear)" Title="Día Semana Año Impar" />
                    <RadzenDataGridColumn Property="@nameof(Congregation.WeekendMeetingDayEvenYear)" Title="Día Fin de Semana Año Par" />
                    <RadzenDataGridColumn Property="@nameof(Congregation.WeekendMeetingDayOddYear)" Title="Día Fin de Semana Año Impar" />
                    <RadzenDataGridColumn Property="@nameof(Congregation.Address)" Title="Dirección" />
                    <RadzenDataGridColumn Property="@nameof(Congregation.City)" Title="Ciudad" />
                    <RadzenDataGridColumn Filterable="false" Sortable="false" Width="150px" Title="Acciones"
                                          TextAlign="TextAlign.Center">
                        <Template Context="congregation">
                            <RadzenButton Icon="edit" ButtonStyle="ButtonStyle.Light" Variant="Variant.Flat"
                                          Size="ButtonSize.Medium"
                                          Click="@(() => EditRow(congregation))" @onclick:stopPropagation="true"/>
                            <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                                          Shade="Shade.Lighter" Variant="Variant.Flat"
                                          Click="@(args => GridDeleteButtonClick(args, congregation))"
                                          @onclick:stopPropagation="true"/>
                        </Template>
                    </RadzenDataGridColumn>
                </Columns>
            </RadzenDataGrid>
        </RadzenColumn>
    </RadzenRow>
</RadzenStack>

@code {
    private IEnumerable<Congregation> _congregations = [];
    private RadzenDataGrid<Congregation> grid0;

    protected override async Task OnInitializedAsync()
    {
        _congregations = await CongregationService.GetAllAsync();
    }

    private async Task AddButtonClick(MouseEventArgs args)
    {
        await DialogService.OpenAsync<CreateCongregation>("Agregar Congregación", null);
        await grid0.Reload();
    }

    private async Task EditRow(Congregation args)
    {
        await DialogService.OpenAsync<EditCongregation>("Editar Congregación", new Dictionary<string, object> { { "CongregationId", args.CongregationId } });
        await grid0.Reload();
    }

    private async Task GridDeleteButtonClick(MouseEventArgs args, Congregation congregation)
    {
        try
        {
            if (await DialogService.Confirm("¿Está seguro que desea eliminar este registro?", "Confirmar", new ConfirmOptions { OkButtonText = "Eliminar", CancelButtonText = "Cancelar" }) == true)
            {
                var deleteResult = await CongregationService.DeleteAsync(congregation.CongregationId);
                await grid0.Reload();
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(new NotificationMessage
            {
                Severity = NotificationSeverity.Error,
                Summary = "Error",
                Detail = "No se pudo eliminar la congregación"
            });
        }
    }

    private async Task OpenCreateModal()
    {
        var result = await DialogService.OpenAsync<CreateCongregation>("Add Congregation", null, new DialogOptions { Width = "600px", Height = "auto", Resizable = true });
        if (result == true)
        {
            _congregations = await CongregationService.GetAllAsync();
            StateHasChanged();
        }
    }

    private async Task OpenEditModal(Congregation congregation)
    {
        var parameters = new Dictionary<string, object> { ["congregation"] = congregation };
        var result = await DialogService.OpenAsync<EditCongregation>("Edit Congregation", parameters, new DialogOptions { Width = "600px", Height = "auto", Resizable = true });
        if (result == true)
        {
            _congregations = await CongregationService.GetAllAsync();
            StateHasChanged();
        }
    }

    private async Task ShowDetailsModal(Congregation congregation)
    {
        var parameters = new Dictionary<string, object> { ["congregation"] = congregation };
        await DialogService.OpenAsync<DetailsCongregation>("Congregation Details", parameters, new DialogOptions { Width = "600px", Height = "auto", Resizable = true });
    }

    private async Task ConfirmDelete(Congregation congregation)
    {
        bool? confirmed = await DialogService.Confirm("Are you sure you want to delete this record?", "Confirm", new ConfirmOptions { OkButtonText = "OK", CancelButtonText = "Cancel" });
        if (confirmed == true)
        {
            await CongregationService.DeleteAsync(congregation.CongregationId);
            _congregations = await CongregationService.GetAllAsync();
            StateHasChanged();
        }
    }

}
